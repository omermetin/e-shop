<h1>UsersList</h1>

<div class="container">
    <table class="table table-hover">

        <thead>
            <tr>
                <th>#</th>
                <th>name</th>
                <th>surname</th>
                <th>email</th>
                <th>username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            <%for(var i=0; i < User.length; i++){ %>
            <%if(i%2==0){%>
            <tr class="info">
                <%}else{%>
            <tr class="warning">
                <%}%>
                <th><%i+1%></th>
                <th><%=User[i].name%></th>
                <th><%=User[i].surname%></th>
                <th><%=User[i].email%></th>
                <th><%=User[i].userName%></th>
                <th><a href="/login/deleteuser/<%=User[i].userName%>">delete</a></th>
            </tr>
            <%}%>

    </tbody>

</table>
</div>